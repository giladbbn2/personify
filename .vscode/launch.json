{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach",
            "port": 3000,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: start:debug",
            "request": "launch",
            "command": "npm run start:debug",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Deploy",
            "request": "launch",
            "command": "npm run deploy",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug Personify",
            "port": 9229,
            "address": "localhost",
            "restart": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}