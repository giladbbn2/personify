    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach",
            "port": 3000,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: start:debug",
            "request": "launch",
            "command": "npm run start:debug",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Deploy",
            "request": "launch",
            "command": "npm run deploy",
            "cwd": "${workspaceFolder}"
        }
    ]
}