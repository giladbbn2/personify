{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "paths": {
      "@app/*": ["app/*"],
      "@base/*": ["base/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@interfaces/*": ["interfaces/*"],
    }
  },
  "include": ["src/**/*"]
}