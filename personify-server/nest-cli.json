{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": false,
    "plugins": ["@nestjs/swagger/plugin"],
    "assets": [
      {
        "include": "static/**/*",
        "outDir": "dist/static"
      }
    ],
    "watchAssets": false
  }
}
